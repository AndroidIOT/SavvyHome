<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_aqua" />

        <com.pixplicity.fontview.FontTextView
            android:id="@+id/nama_icon"
            style="@style/FontTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/icon"
            android:text="Drink Water"
            android:textColor="#5e5e5e"
            android:textSize="15dp"
            android:textStyle="bold" />


        <com.pixplicity.fontview.FontTextView
            style="@style/FontTextViewStyle"
            android:id="@+id/value_gallon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/type"
            android:text="0"
            android:textColor="#5e5e5e"
            android:textSize="13dp" />

        <com.pixplicity.fontview.FontTextView
            android:id="@+id/type"
            style="@style/FontTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toLeftOf="@+id/warning"
            android:text="%"
            android:textColor="#5e5e5e"
            android:textSize="11dp" />

        <ImageView
            android:id="@+id/warning"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_warning"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_fire" />

        <com.pixplicity.fontview.FontTextView
            android:id="@+id/nama_icon1"
            style="@style/FontTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/icon1"
            android:text="Gas Tank"
            android:textColor="#5e5e5e"
            android:textSize="15dp"
            android:textStyle="bold" />


        <com.pixplicity.fontview.FontTextView
            style="@style/FontTextViewStyle"
            android:id="@+id/value_gas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/type1"
            android:text="0"
            android:textColor="#5e5e5e"
            android:textSize="13dp" />

        <com.pixplicity.fontview.FontTextView
            android:id="@+id/type1"
            style="@style/FontTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toLeftOf="@+id/warning1"
            android:text="%"
            android:textColor="#5e5e5e"
            android:textSize="11dp" />

        <ImageView
            android:id="@+id/warning1"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_warning"
            android:visibility="visible" />

    </RelativeLayout>
</LinearLayout>